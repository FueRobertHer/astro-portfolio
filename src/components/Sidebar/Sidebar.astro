---
import Logo from "../Logo.astro";
// import WaterDrop from "./WaterDrop.astro";
import OutsideLinks from "./OutsideLinks.astro";
import NavLink from "../NavLink.astro"
import ThemeToggleButton from "./ThemeToggleButton";

enum Page {
  home = "/",
  about = "/about",
  projects = "/projects",
}
---

<nav
  class="fixed top-0 left-0 flex flex-col items-end bg-transparent h-screen w-14 md:w-20"
>
  <a href={Page.home} class="w-14 mt-1 md:mt-7">
    <Logo />
  </a>
  <ThemeToggleButton client:visible />
  <div class="flex flex-col mt-20 justify-between text-right h-fit font-medium text-base md:text-xl">
    <NavLink href={Page.about}>
      About
    </NavLink>
    <NavLink href={Page.projects}>
      Projects
    </NavLink>
  </div>
  <!-- <WaterDrop /> -->
  <OutsideLinks />
</nav>