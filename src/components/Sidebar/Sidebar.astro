---
import Logo from "../Logo.astro";
import WaterDrop from "./WaterDrop.astro";
import OutsideLinks from "./OutsideLinks.astro";

---

<nav
  class="fixed top-0 left-0 flex flex-col items-end bg-transparent h-screen w-14 md:w-20"
>
  <a href="/" class="w-14 mt-1 md:mt-7">
    <Logo />
  </a>
  <div class="flex flex-col mt-20 justify-between text-right h-fit font-medium text-xs md:text-base">
    <a href="/" class={`py-2 hover:text-[#366CC6] dark:hover:text-[#C63D32] ${Astro.url.pathname === "/" ? "text-[#366CC6] dark:text-[#C63D32]" : ""}`}>
      Home
    </a>
    <a href="/about" class={`py-2 hover:text-[#366CC6] dark:hover:text-[#C63D32] ${Astro.url.pathname === "/about" ? "text-[#366CC6] dark:text-[#C63D32]" : ""}`}>
      About
    </a>
    <a href="/projects" class={`py-2 hover:text-[#366CC6] dark:hover:text-[#C63D32] ${Astro.url.pathname === "/projects" ? "text-[#366CC6] dark:text-[#C63D32]" : ""}`}>
      Projects
    </a>
  </div>
  <WaterDrop />
  <OutsideLinks />
</nav>
